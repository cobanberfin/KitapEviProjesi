@model KitapEvi_Models.Models.Yayınevi
@{
    var title = "Yayınevi Oluştur";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger">   </div>

        <input type="hidden" asp-for="YayıneviID" />
        @if (Model.YayıneviID != 0)
        {
            title = "Yayınevi Düzenle";
        }

        <div class="col-12">
            <h2 class="text-primary">@title</h2>
        </div>
    </div>

    <div class="col-8 pt-4">
        <div class="row form-group ">

            <div class="col-4">
                <label asp-for="YayıneviAdi"> </label>

            </div>
            <div class="col-8">
                <input asp-for="YayıneviAdi" class="form-control" />
                <span asp-Validation-for="YayıneviAdi" class="text-danger" />

            </div>
        

    </div>

   
        <div class="row form-group ">

            <div class="col-4">
                <label asp-for="Lokasyon"> </label>

            </div>
            <div class="col-8">
                <input asp-for="Lokasyon" class="form-control" />
                <span asp-Validation-for="Lokasyon" class="text-danger" ></span>

            </div>
            </div>
            <div class=" row form-group">
                <div class="col-4 offset-4">
                    @if (Model.YayıneviID != 0)
                    {
                        <button type="submit" class="btn btn-primary form-control">Güncelle </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Ekle </button>


                    }
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control" >Listeye Geri Dön</a>
                </div>


            </div>

        </div>





</form>

