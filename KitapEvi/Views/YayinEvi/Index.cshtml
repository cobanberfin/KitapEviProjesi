@model IEnumerable<KitapEvi_Models.Models.Yayınevi>

    <div class="border p-4 bg-white">
        <div class="row">
            <div class="col-10">
                <h2 class="text-info">Yayınevi Listesi </h2>

            </div>
            <div class="col-2">
                <a class="btn btn-info form-control" asp-action="Update_Insert">Yayınevi Ekle</a>

            </div>

        </div>


        <div>
            @if (Model.Count() > 0)
            {


                <table class="table table-striped border">
                    <tbody>
                        <tr class="table-secondary">
                            <th>Yayın Evi </th>
                            <th>Lokasyon </th>
                            <th> </th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.YayıneviAdi</td>
                                <td>@item.Lokasyon</td>
                                <td>
                                    <a class="btn btn-primary  text-White" asp-action="Update_Insert" asp-route-id="@item.YayıneviID">Düzenle </a>
                                    <a class="btn btn-danger text-White" asp-action="Delete" asp-route-id="@item.YayıneviID">Sil </a>

                                </td>
                            </tr>
                        }


                    </tbody>

                </table>

            }
            else
            {
                <p>Kayıt Bulunamadı ....</p>
            }
        </div>
    </div>
